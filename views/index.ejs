<%- include("partials/header.ejs") %>

<section class="section-wrapper">
  <h1 class="main-title">Add a new Note!</h1>

  <form action="/submit" method="POST" class="add-note-form">
    <lable for="title">Note's title:</lable>
    <input class="user-input title" type="text" name="title" required />
    <lable for="note">Note's content:</lable>
    <input class="user-input" type="text" name="note" required />
    <input class="add-btn" type="submit" value="Add" />
  </form>

  <div class="last-notes-wrapper">
    <%if(locals.title && locals.note) { %>
    <h3 class="last-note-title"><%=message%></h3>
    <h4 class="last-note-title">The last note:</h4>
    <div class="last-note-box">
      <p class="note-text-title"><%=title%></p>
      <p class="note-text"><%=note%></p>
      <a href="/view"> <button class="std-btn">See more ðŸ‘‰</button></a>
    </div>
    <%} else {%>
    <h3 class="no-notes-title">You have no new Notes</h3>
    <%}%>
  </div>
</section>
<%- include("partials/footer.ejs") %>
